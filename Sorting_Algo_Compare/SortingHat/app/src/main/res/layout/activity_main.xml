<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="3sp"
    android:background="@color/blue"
    tools:context=".MainActivity" >


    <Button
        android:id="@+id/Go_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/data_size_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:text="Find Algo" />

    <TextView
        android:id="@+id/data_type_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="62dp"
        android:text="Data Type"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/data_size_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/data_type_tv"
        android:layout_below="@+id/data_type_tv"
        android:layout_marginTop="38dp"
        android:text="Data Size"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/hat"
        android:layout_below="@id/Go_Button"
        android:layout_centerHorizontal="true"
        android:padding="50sp"
        />

    <Spinner
        android:id="@+id/data_type_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/data_size_tv"
        android:layout_marginStart="26dp"
        android:layout_toEndOf="@+id/data_type_tv" />

    <Spinner
        android:id="@+id/data_size_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/data_size_tv"
        android:layout_alignStart="@+id/data_type_spinner" />
</RelativeLayout>
